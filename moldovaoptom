  <main class="p-4 grid grid-cols-1 gap-4" id="productList">
    <!-- –¢–æ–≤–∞—Ä—ã –±—É–¥—É—Ç –∑–¥–µ—Å—å -->
  </main>

  <footer class="fixed bottom-0 left-0 right-0 bg-white p-4 shadow-inner flex justify-between items-center">
    <span>üõí <span id="cart-count">0</span> –≤ –∑–∞–∫–∞–∑–µ</span>
    <button onclick="openOrderForm()" class="bg-blue-600 text-white px-4 py-2 rounded">–û—Ñ–æ—Ä–º–∏—Ç—å –∑–∞–∫–∞–∑</button>
  </footer>

  <div id="orderForm" class="fixed inset-0 bg-black bg-opacity-50 hidden justify-center items-center">
    <div class="bg-white p-6 rounded shadow w-11/12 max-w-md">
      <h2 class="text-xl font-bold mb-4">–û—Ñ–æ—Ä–º–ª–µ–Ω–∏–µ –∑–∞–∫–∞–∑–∞</h2>
      <input type="text" placeholder="–í–∞—à–µ –∏–º—è" class="w-full border p-2 mb-2" id="name" />
      <input type="tel" placeholder="–¢–µ–ª–µ—Ñ–æ–Ω" class="w-full border p-2 mb-4" id="phone" />
      <button onclick="submitOrder()" class="bg-green-600 text-white px-4 py-2 rounded w-full">–û—Ç–ø—Ä–∞–≤–∏—Ç—å</button>
    </div>
  </div>

  <script>
    const products = [
      { name: "–®–≤–∞–±—Ä–∞", category: "–ë—ã—Ç–æ–≤–∞—è —Ç–µ—Ö–Ω–∏–∫–∞", price: 120 },
      { name: "–ü—ã–ª–µ—Å–æ—Å", category: "–ë—ã—Ç–æ–≤–∞—è —Ç–µ—Ö–Ω–∏–∫–∞", price: 850 },
      { name: "–ö–∞—Å—Ç—Ä—é–ª—è", category: "–ü–æ—Å—É–¥–∞", price: 200 },
      { name: "–¢–µ—Ä–º–æ—Å", category: "–°–µ–∑–æ–Ω", price: 150 },
    ];
    const cart = [];

    function renderProducts(filter = '–í—Å–µ') {
      const list = document.getElementById('productList');
      list.innerHTML = '';
      products.filter(p => filter === '–í—Å–µ' || p.category === filter).forEach(product => {
        const item = document.createElement('div');
        item.className = "bg-white p-4 rounded shadow flex justify-between items-center";
        item.innerHTML = `
          <div>
            <h3 class="font-bold">${product.name}</h3>
            <p class="text-sm text-gray-600">${product.price} –ª–µ–π</p>
          </div>
          <button class="bg-blue-500 text-white px-3 py-1 rounded" onclick='addToCart("${product.name}")'>–î–æ–±–∞–≤–∏—Ç—å</button>
        `;
        list.appendChild(item);
      });
    }

    function filterCategory(category) {
      renderProducts(category);
    }

    function addToCart(name) {
      cart.push(name);
      document.getElementById('cart-count').innerText = cart.length;
    }

    function openOrderForm() {
      if (cart.length === 0) return alert('–°–Ω–∞—á–∞–ª–∞ –¥–æ–±–∞–≤—å—Ç–µ —Ç–æ–≤–∞—Ä—ã –≤ –∫–æ—Ä–∑–∏–Ω—É');
      document.getElementById('orderForm').classList.remove('hidden');
    }

    function submitOrder() {
      const name = document.getElementById('name').value;
      const phone = document.getElementById('phone').value;
      if (!name || !phone) return alert('–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –∏–º—è –∏ —Ç–µ–ª–µ—Ñ–æ–Ω');
      alert(`–ó–∞–∫–∞–∑ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω!\n–ò–º—è: ${name}\n–¢–µ–ª–µ—Ñ–æ–Ω: ${phone}\n–¢–æ–≤–∞—Ä—ã: ${cart.join(', ')}`);
      // –ó–¥–µ—Å—å –º–æ–∂–Ω–æ –ø–æ–¥–∫–ª—é—á–∏—Ç—å –æ—Ç–ø—Ä–∞–≤–∫—É –≤ Telegram –∏–ª–∏ Google –¢–∞–±–ª–∏—Ü—É
      cart.length = 0;
      document.getElementById('cart-count').innerText = '0';
      document.getElementById('orderForm').classList.add('hidden');
    }

    document.getElementById('search').addEventListener('input', function () {
      const value = this.value.toLowerCase();
      const list = document.getElementById('productList');
      list.innerHTML = '';
      products.filter(p => p.name.toLowerCase().includes(value)).forEach(product => {
        const item = document.createElement('div');
        item.className = "bg-white p-4 rounded shadow flex justify-between items-center";
        item.innerHTML = `
          <div>
            <h3 class="font-bold">${product.name}</h3>
            <p class="text-sm text-gray-600">${product.price} –ª–µ–π</p>
          </div>
          <button class="bg-blue-500 text-white px-3 py-1 rounded" onclick='addToCart("${product.name}")'>–î–æ–±–∞–≤–∏—Ç—å</button>
        `;
        list.appendChild(item);
      });
    });

    renderProducts();
  </script>
